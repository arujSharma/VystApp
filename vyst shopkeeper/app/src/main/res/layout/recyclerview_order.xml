<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@color/colorWhite"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"

        >

        <TextView
            android:id="@+id/tv_order_no"
            style="@style/CustomTextAppearance.Semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="order no"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_14sdp"

            />

        <TextView
            android:id="@+id/tv_price"
            style="@style/CustomTextAppearance.Semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="price"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14sdp"

            />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_order_no"
            android:layout_marginTop="@dimen/_5sdp">


        </android.support.v7.widget.RecyclerView>

        <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/rv_items"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/colorLightGrey" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/CustomTextAppearance.Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_line"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="order time"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/tv_del_time"
            style="@style/CustomTextAppearance.Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"

            android:text="delivery"
            android:textColor="@color/colorBlack"

            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/tv_status"
            style="@style/CustomTextAppearance.Italic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_time"

            android:text="status"
            android:textColor="@color/colorRed"

            android:textSize="@dimen/_14sdp" />

        <View
            android:id="@+id/view_line_two"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tv_del_time"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@color/colorLightGrey" />

        <Button
            android:id="@+id/tv_deliver_order"
            style="@style/CustomTextAppearance.Regular"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/view_line_two"
            android:background="@drawable/button_primary"
            android:text="Deliver Order"
            android:textColor="@color/colorWhite"
            android:layout_alignParentLeft="true" />

        <Button
            android:id="@+id/tv_view_order"
            style="@style/CustomTextAppearance.Regular"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/view_line_two"
            android:background="@drawable/button_bg_view"
            android:text="View Address"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>



